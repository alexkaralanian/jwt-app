{
  "extends": ["airbnb", "prettier", "prettier",
    "prettier/flowtype", "prettier/react"],

  "plugins": ["jest", "prettier", "flowtype",
    "react"],

  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module"
  },

  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true,
    "jest/globals": true
  },

  "rules": {
    "prettier/prettier": ["error"],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  }
}
