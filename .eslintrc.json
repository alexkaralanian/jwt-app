{
  "extends": ["airbnb", "prettier", "prettier/react"],

  "plugins": ["jest", "prettier", "react"],

  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module"
  },

  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true,
    "jest/globals": true
  },

  "rules": {
    "prettier/prettier": ["error"]
  }
}
